@namespace Microsoft.FluentUI.AspNetCore.Components
@inherits FluentComponentBase
﻿<div class="@ClassValue" style="@StyleValue" @ontouchstart="OnTouchStartAsync" @ontouchmove="OnTouchMoveAsync" @ontouchend="OnTouchEndAsync">
    <div style="@WrapperStyle">
        @if (Direction == PullDirection.Down)
        {
            <div part="tip" direction="down" style="--fluent-pull-refresh-head-height: @(PullTipHeight)px;">
                @GetTipContent()
            </div>
        }
        @ChildContent
        @if (Direction == PullDirection.Up)
        {
            <div part="tip" direction="up" style="--fluent-pull-refresh-head-height: @(PullTipHeight)px;">
                @GetTipContent()
            </div>
        }
    </div>
</div>

